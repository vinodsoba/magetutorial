<?php $posts = $block->getPosts() ?>
<?php if (count($posts) > 0): ?>
    <div class="post-list-wrapper">
        <ol class="post-list grid">
            <?php foreach ($posts as $post): ?>
                <?php if ($renderedPostHtml = $block->renderPost($post)): ?>
                    <?php // phpcs:ignore -- long line ?>
                    <li class="item<?php if ($post->isSticky()): ?> is-sticky<?php endif; ?><?php if ($postFormat = $post->getPostFormat()): ?> <?= $block->escapeHtmlAttr($postFormat) ?><?php endif; ?>">
                        <?= /* @noEscape */ $renderedPostHtml ?>
                    </li>
                <?php endif; ?>
            <?php endforeach; ?>
        </ol>
        <?= /* @noEscape */  $block->getPagerHtml() ?>
    </div>
<?php endif; ?>